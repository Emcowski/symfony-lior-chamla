{% extends 'admin/admin_base.html.twig' %}

{% block title %}
    Edition de la réservation {{booking.id}}
{% endblock %}

{% block body %}
	<div class="container">
	    <h1 class="my-5">Edition de la réservation de {{booking.booker.fullName}} (#{{booking.id}})</h1>

        <div class="alert alert-info">
            <strong>Booker : </strong>
            {{booking.booker.fullName}}
            <br>
            <strong>Date de création: </strong>
            {{booking.createdAt|date('d/m/Y H:i')}}
            <br>
            <strong>Annonce liée : </strong>
            <a href="{{ path('ads_show', {'slug': booking.ad.slug}) }}">{{booking.ad.title}}</a>
            <br>
            <strong>Date de début du séjour :</strong> 
            {{booking.startDate|date('d/m/Y')}} - 
            <strong>Date de fin du séjour :</strong> 
            {{booking.endDate|date('d/m/Y')}}
        </div>

		{{ form_start(form) }}
            <div class="row">
                <div class="col">
		            {{ form_row(form.startDate) }}
		            {{ form_row(form.endDate) }}
		            {{ form_row(form.comment) }}
                </div>
                <div class="col">
		            {{ form_row(form.booker) }}
		            {{ form_row(form.ad) }}
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        Enregistrer
                    </button>
                </div>
            </div>

		{{ form_end(form) }}

	</div>
{% endblock %}
